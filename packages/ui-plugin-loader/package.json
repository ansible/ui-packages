{
  "name": "@ansible/ui-plugin-loader",
  "version": "0.1.1",
  "description": "Ansible UI Plugin Loader",
  "author": "The Red Hat Ansible Team",
  "license": "Apache-2.0",
  "type": "module",
  "public": true,
  "keywords": [
    "ansible"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ansible/ui-packages.git",
    "directory": "packages/ui-plugin-loader"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.umd.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "vite build && tsc --noEmit false --emitDeclarationOnly --declaration --outDir dist",
    "test": "concurrently npm:tsc npm:eslint npm:prettier npm:depcheck -c auto",
    "tsc": "tsc --noEmit",
    "eslint": "eslint --max-warnings 0 --report-unused-disable-directives src",
    "eslint:fix": "eslint --fix src",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "vitest": "vitest --run",
    "vitest:ui": "vitest --ui",
    "depcheck": "npx depcheck"
  },
  "peerDependencies": {
    "@module-federation/enhanced": "^0.13.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@ansible/ui-plugin-sdk": "0.1.1",
    "@module-federation/enhanced": "^0.13.0",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^19.1.2",
    "concurrently": "^9.1.2",
    "react": "^19.1.0",
    "react-dom": "^18.3.1",
    "vite": "^6.3.3",
    "vitest": "^3.1.2"
  }
}
