{
  "parallel": 8,
  "release": {
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "targetDefaults": {
    "start": {
      "dependsOn": []
    },
    "clean": {
      "dependsOn": []
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.__mf__temp"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["build"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "tsc": {
      "cache": true,
      "dependsOn": ["build"]
    },
    "eslint": {
      "cache": true,
      "dependsOn": ["build"]
    },
    "eslint:fix": {
      "dependsOn": []
    },
    "vitest": {
      "cache": true,
      "dependsOn": ["build"]
    },
    "vitest:ui": {
      "dependsOn": []
    },
    "prettier": {
      "cache": true,
      "dependsOn": []
    },
    "prettier:fix": {
      "dependsOn": []
    },
    "depcheck": {
      "cache": true,
      "dependsOn": []
    }
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    }
  ]
}
